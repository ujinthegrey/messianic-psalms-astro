---
const { url, id, messianicTitle, title, description = 'Увы, описание отсутствует :-(' } = Astro.props
---
<li>
    <a class="psalm-item-title" href={url}>
        Псалом {id.replace(/^0+/, '')} {title} | {messianicTitle}
    </a>
    <details>
        <summary role="button">Описание</summary>
        <p class="description">details + summary + p = {description}</p>
    </details>
</li>
<style>
    .psalm-item-title {
        font-size: var(--fz-card-title);
    }
    .btn,
    summary {
        color: var(--green);
        width: 8em;
        padding: .5rem 0;
        margin-top: 1rem;
        font-size: 1rem;
        border: solid 2px var(--lightgray);
        border-radius: .5rem;
        display: flex;
        justify-content: center;
    }
    .description {
        margin: 1rem 0;
    }
    .hidden-description {
        margin: 0;
        width: 1px;
        height: 1px;
        overflow: hidden;
        z-index: -1000;
    }
</style>
